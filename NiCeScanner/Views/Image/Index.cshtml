@model List<ImageModel>

<div class="justify-content-between d-flex">
    <h2>Image Gallery</h2>
    <div>
        <a asp-action="Upload" class="btn btn-primary">Upload New Image</a>
    </div>
</div>

<div style="display: flex; flex-wrap: wrap; justify-content: space-around;">
    @foreach (var image in Model)
    {
        <div style="margin: 20px; flex-basis: calc(33.33% - 40px); box-sizing: border-box;">
            <a href="@Url.Action("Details", new { id = image.Id })">
                <img src="@Url.Action("Display", new { id = image.Id })" alt="@image.FileName" style="max-width: 100%; height: auto;" />
            </a>
            <p>@image.FileName</p>
        </div>
    }
</div>
