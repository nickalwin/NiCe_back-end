@model ImageModel

<style>
    .page-container {
        font-family: Arial, sans-serif;
        margin: 0;
        padding: 4px;
        background-color: #f4f4f4;
    }
    .row {
        margin: 20px;
    }
    .col-12 {
        padding: 20px;
        background-color: #fff;
        border-radius: 5px;
        box-shadow: 0px 0px 10px 0px rgba(0,0,0,0.1);
    }
    h2 {
        color: #333;
    }
    .btn {
        margin-top: 20px;
    }
    img {
        max-width: 100%;
        height: auto;
    }
    .input-group {
        margin-top: 20px;
    }
</style>

<div class="page-container">
    <div class="row">
        <div class="col-12">
            <h2>Image Details</h2>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <a asp-action="Index" class="btn btn-secondary mb-3">Back to Image Gallery</a>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <img class="mb-3" src="@Url.Action("Display", new { id = Model.Id })" alt="@Model.FileName"/>
            <p class="mb-0">Filename:</p>
            <div class="input-group mb-3">
                <input disabled="disabled" type="text" id="newImageName" class="form-control" placeholder="Enter new image name" value="@Model.FileName" aria-label="Enter new image name" aria-describedby="button-edit-name">
            </div>
            <form asp-action="Delete" method="post">
                <input type="hidden" asp-for="Id" />
                <input type="submit" value="Delete" class="btn btn-danger" />
            </form>
        </div>
    </div>
</div>