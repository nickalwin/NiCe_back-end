@model NiCeScanner.Models.Advice

@{
    ViewData["Title"] = "Details";
    var languages = (Dictionary<string, string>)ViewBag.Languages;
}

<h1>Details</h1>

<div>
    <h4>Advice</h4>
    <hr />
    <dl class="row">
        @foreach (var language in languages)
        {
            <dt class="col-sm-2">
                Content (@language.Key)
            </dt>
            <dd class="col-sm-10">
                @{

                var categoryText = language.Value;
                }
                @categoryText
            </dd>
        }
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.AdditionalLink)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.AdditionalLink)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.AdditionalLinkName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.AdditionalLinkName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.QuestionId)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.QuestionId)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Condition)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Condition)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CreatedAt)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CreatedAt)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.UpdatedAt)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.UpdatedAt)
        </dd>
    </dl>
</div>
