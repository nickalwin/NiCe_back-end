@model NiCeScanner.Models.CategoryForm

@{
    ViewData["Title"] = "Edit";
    var languages = (List<Language>)ViewBag.Languages;
}

<h1>Edit</h1>

<h4>Category</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />

            @foreach (var language in Model.Languages)
            {
                <div class="form-group" id="@language.Key" style="display: flex; align-items: center;">
                    <label style="flex: 1;">Category name (@language.Key)</label>
                    <textarea class="form-control" name="Languages[@language.Key]" style="flex: 2;">@language.Value</textarea>
                    @if (language.Key != "en" && language.Key != "nl")
                    {
                        <button type="button" onclick="removeLanguage('@language.Key')" style="flex: 1; margin-left: 10px; background-color: #e01e1e; color: white; padding: 10px 24px; border: none; border-radius: 4px; cursor: pointer;">Remove</button>
                    }
                </div>
            }
            
            <div id="additionalLanguages"></div>

            <div>
                <select id="LanguageSelect" class="form-control">
                    <option value="">Select Language</option>
                    @foreach (var language in languages)
                    {
                        <option value="@language.LangCode">@language.LangEnglishName</option>
                    }
                </select>
                <button type="button" id="addLanguage" class="btn btn-primary">Add Language</button>
            </div>

            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Show" /> @Html.DisplayNameFor(model => model.Show)
                </label>
            </div>

            <div class="form-group">
                <label asp-for="Color" class="control-label"></label>
                <select asp-for="Color" class="form-control">
                    <option value="goud" style="color: #ffcb05;">goud</option>
                    <option value="appelgroen" style="color: #b1d249;">appelgroen</option>
                    <option value="lichtroze" style="color: #f287b7;">lichtroze</option>
                    <option value="blauw" style="color: #1ebcc5;">blauw</option>
                    <option value="lichtblauw" style="color: #84d0d9;">lichtblauw</option>
                    <option value="donkerroze" style="color: #f16682;">donkerroze</option>
                </select>
                <span asp-validation-for="Color" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    <script>
        document.getElementById('addLanguage').addEventListener('click', function() {
            var select = document.getElementById('LanguageSelect');
            var langCode = select.value;
            var langName = select.options[select.selectedIndex].text;
            if (langCode) {
                var input = document.createElement('input');
                input.name = 'Languages[' + langCode + ']';
                input.className = 'form-control';
                var label = document.createElement('label');
                label.textContent = 'Category name (' + langName + ')';
                var div = document.createElement('div');
                div.className = 'form-group';
                div.appendChild(label);
                div.appendChild(input);
                document.getElementById('additionalLanguages').appendChild(div);
                select.options[select.selectedIndex].disabled = true;
                select.value = '';
            }
        });

        function removeLanguage(key) {
            var element = document.getElementById(key);
            element.parentNode.removeChild(element);
            element = document.getElementById(key);
            element.parentNode.removeChild(element);
            element = document.getElementById(key);
            element.parentNode.removeChild(element);

            var index = Languages.indexOf(key);
            if (index > -1) {
                Languages.splice(index, 1);
            }
        }
    </script>

    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
