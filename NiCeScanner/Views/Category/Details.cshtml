@model NiCeScanner.Models.Category

@{
    ViewData["Title"] = "Details";
    var languages = (Dictionary<string, string>)ViewBag.Languages;
}

<h1>Details</h1>

<div>
    <h4>Category</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Uuid)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Uuid)
        </dd>

        @foreach (var language in languages)
        {
            <dt class="col-sm-2">
                Content (@language.Key)
            </dt>
            <dd class="col-sm-10">
                @{

                    var categoryText = language.Value;
                }
                @categoryText
            </dd>
        }

        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Show)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Show)
        </dd>

        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Color)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Color)
        </dd>

        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CreatedAt)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CreatedAt)
        </dd>

        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.UpdatedAt)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.UpdatedAt)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
