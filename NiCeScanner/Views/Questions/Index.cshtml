@using Newtonsoft.Json
@using Newtonsoft.Json.Linq
@model PaginatedList<NiCeScanner.Models.Question>

<h1>@ViewData["Title"]</h1>

<div class="justify-content-between d-flex">
    <a asp-action="Create">Create New</a>
    <div class="search-container mb-4">
        <form id="questionSearchForm" asp-action="Index" method="get">
            <div class="input-group">
                <input id="searchInput" type="text" class="form-control" name="searchString" value="@ViewData["CurrentFilter"]" placeholder="Search...">
                <div class="input-group-append">
                    <button class="btn btn-outline-secondary" type="submit">Search</button>
                </div>
            </div>
        </form>
    </div>
    <a asp-action="DownloadExcel" class="btn btn-primary">Download Excel</a>
</div>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success" role="alert">
        @TempData["SuccessMessage"]
    </div>
}

<div id="tableContainer" class="table-container">
    @Html.Partial("_QuestionTable", Model)
</div>
