@model NiCeScanner.Models.QuestionForm

@{
    ViewData["Title"] = "Edit";
    var languages = (List<Language>)ViewBag.Languages;
}

<h1>Edit</h1>

<h4>Question</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form id="editForm" asp-action="Edit" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />

            @foreach (var header in Model.Headers)
            {
                <div class="form-group" id="@header.Key" style="display: flex; align-items: center;">
                    <label style="flex: 1;">Header (@header.Key)</label>
                    <textarea class="form-control" name="Headers[@header.Key]" style="flex: 2;">@header.Value</textarea>
                </div>
            }

            <div id="additionalHeaders"></div>

            @foreach (var question in Model.Questions)
            {
                <div class="form-group" id="@question.Key" style="display: flex; align-items: center;">
                    <label style="flex: 1;">Question (@question.Key)</label>
                    <textarea class="form-control" name="Questions[@question.Key]" style="flex: 2;">@question.Value</textarea>
                </div>
            }

            <div id="additionalQuestions"></div>

            @foreach (var tooltip in Model.Tooltips)
            {
                <div class="form-group" id="@tooltip.Key" style="display: flex; align-items: center;">
                    <label style="flex: 1;">Tooltip (@tooltip.Key)</label>
                    <textarea class="form-control" name="Tooltips[@tooltip.Key]" style="flex: 2;">@tooltip.Value</textarea>
                    @if (tooltip.Key != "en" && tooltip.Key != "nl")
                    {
                        <button type="button" onclick="removeLanguage('@tooltip.Key')" style="flex: 1; margin-left: 10px; background-color: #e01e1e; color: white; padding: 10px 24px; border: none; border-radius: 4px; cursor: pointer;">Remove</button>
                    }
                </div>
            }

            <div id="additionalTooltips"></div>

            <div>
                <select id="LanguageSelect" class="form-control">
                    <option value="">Select Language</option>
                    @foreach (var language in languages)
                    {
                    <option value="@language.LangCode">@language.LangEnglishName</option>
                    }
                </select>
                <button type="button" id="addLanguage" class="btn btn-primary">Add Language</button>
            </div>

            <div class="form-group">
                <label asp-for="CategoryId" class="control-label"></label>
                <select asp-for="CategoryId" id="CategorySelect" class="form-control" asp-items="ViewBag.Category"></select>
                <span asp-validation-for="CategoryId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Weight" class="control-label"></label>
                <input asp-for="Weight" class="form-control" />
                <span asp-validation-for="Weight" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Statement" /> @Html.DisplayNameFor(model => model.Statement)
                </label>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Show" /> @Html.DisplayNameFor(model => model.Show)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="ImageId" class="control-label">Select an Image</label>
                <select asp-for="ImageId" id="ImageSelect" class="form-control" asp-items="ViewBag.Images">
                    <option value="">No Image</option>
                </select>
                <span asp-validation-for="ImageId" class="text-danger"></span>
            </div>
            <div class="form-group mt-4">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
    <div class="col-md-4" id="imagePreviewContainer">
        <h4>Image Preview</h4>
        <img id="imagePreview" src="@Url.Action("Display", "Image", new { id = Model.ImageId })" alt="Image Preview" class="img-thumbnail" />
    </div>
</div>

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger" role="alert">
        @TempData["ErrorMessage"]
    </div>
}

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    <script>
        document.getElementById('addLanguage').addEventListener('click', function() {
            var select = document.getElementById('LanguageSelect');
            var langCode = select.value;
            var langName = select.options[select.selectedIndex].text;
            if (langCode) {
                var input = document.createElement('input');
                input.name = 'Headers[' + langCode + ']';
                input.className = 'form-control';
                var label = document.createElement('label');
                label.textContent = 'Category name (' + langName + ')';
                var div = document.createElement('div');
                div.className = 'form-group';
                div.appendChild(label);
                div.appendChild(input);
                document.getElementById('additionalHeaders').appendChild(div);
                select.options[select.selectedIndex].disabled = true;
                select.value = '';

                var input = document.createElement('input');
                input.name = 'Questions[' + langCode + ']';
                input.className = 'form-control';
                var label = document.createElement('label');
                label.textContent = 'Category name (' + langName + ')';
                var div = document.createElement('div');
                div.className = 'form-group';
                div.appendChild(label);
                div.appendChild(input);
                document.getElementById('additionalQuestions').appendChild(div);
                select.options[select.selectedIndex].disabled = true;
                select.value = '';

                var input = document.createElement('input');
                input.name = 'Tooltips[' + langCode + ']';
                input.className = 'form-control';
                var label = document.createElement('label');
                label.textContent = 'Category name (' + langName + ')';
                var div = document.createElement('div');
                div.className = 'form-group';
                div.appendChild(label);
                div.appendChild(input);
                document.getElementById('additionalTooltips').appendChild(div);
                select.options[select.selectedIndex].disabled = true;
                select.value = '';
            }
        });

        function removeLanguage(key) {
            var element = document.getElementById(key);
            element.parentNode.removeChild(element);

            var index = Languages.indexOf(key);
            if (index > -1) {
                Languages.splice(index, 1);
            }
        }

        if (!$('#ImageSelect').val()) {
            $('#imagePreviewContainer').hide();
        }
        $('#ImageSelect').change(function () {
            var imageId = $(this).val();
            if (imageId) {
                $('#imagePreview').attr('src', '/Image/Display/' + imageId);
                $('#imagePreviewContainer').show();
            } else {
                $('#imagePreview').attr('src', '').hide();
                $('#imagePreviewContainer').hide();
            }
        });
    </script>

    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

