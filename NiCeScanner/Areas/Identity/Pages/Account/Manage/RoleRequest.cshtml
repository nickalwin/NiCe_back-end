@page
@model NiCeScanner.Areas.Identity.Pages.Account.Manage.RoleRequestModel
@{
    ViewData["Title"] = "Role Request";
    ViewData["ActivePage"] = ManageNavPages.RoleRequest;
}

<h1>Role Request</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Username" class="control-label">Username</label>
                <input asp-for="Username" class="form-control" readonly />
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Role" class="control-label">Select Role</label>
                <select asp-for="Input.Role" class="form-control" aria-required="true">
                    <option value="">Select Role</option>
                    @foreach (var role in Model.Roles)
                    {
                        <option value="@role.Value">@role.Text</option>
                    }
                </select>
                <span asp-validation-for="Input.Role" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Reason" class="control-label">Reason</label>
                <input asp-for="Input.Reason" class="form-control" />
                <span asp-validation-for="Input.Reason" class="text-danger"></span>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary">Request</button>
            </div>
        </form>
    </div>
</div>

@if (TempData["StatusMessage"] != null)
{
    <div class="alert alert-success" role="alert">
        @TempData["StatusMessage"]
    </div>
}

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
